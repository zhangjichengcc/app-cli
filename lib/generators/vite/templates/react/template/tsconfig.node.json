{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // "noEmit": true
    "emitDeclarationOnly": true,

    "baseUrl": "./",
    "paths": {
      "@packages/*": ["packages/*"]
    }
  },
  "include": ["vite.config.ts", "package.json"]
}
